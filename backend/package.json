{
  "name": "server",
  "version": "1.0.0",
  "description": "back-end for donations",
  "main": "index.js",
  "node": "14.x",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "local": "nodemon src/server.ts",
    "seed": "nodemon src/seed.ts",
    "dev": "NODE_ENV=dev nodemon src/server.ts",
    "staging": "NODE_ENV=staging nodemon src/server.ts",
    "production": "NODE_ENV=production nodemon src/server.ts",
    "lint": "eslint src --ext .ts",
    "format": "eslint src --ext .ts --fix",
    "build": "tsc",
    "start": "node build/server.js",
    "start:dev": "NODE_ENV=dev node build/server.js",
    "start:staging": "NODE_ENV=staging node build/server.js",
    "start:production": "NODE_ENV=production node build/server.js",
    "typeorm": "ts-node ./node_modules/.bin/typeorm -f ./src/db/ormconfig.ts",
    "migration:run": "yarn run typeorm migration:run",
    "migration:down": "yarn run typeorm migration:revert",
    "migration:generate": "yarn run typeorm migration:generate -n",
    "migration:blank": "yarn run typeorm migration:create -n"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "Muaaz",
  "license": "ISC",
  "dependencies": {
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "custom-env": "^2.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-joi-validation": "^5.0.0",
    "mysql": "^2.18.1",
    "typeorm": "^0.2.38",
    "typeorm-naming-strategies": "^2.0.0",
    "uuid": "^8.3.2",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-ensure-login": "^0.1.7",
    "@types/connect-flash": "^0.0.37",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-flash": "^0.0.2",
    "@types/express-session": "^1.17.4",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.4",
    "@types/passport-google-oauth": "^1.0.42",
    "@types/passport-local": "^1.0.34",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.8",
    "nodemon": "^2.0.13",
    "prettier": "^2.5.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
